{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">➕ Ajouter un nouveau produit</h1>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% if form.vars.errors|length > 0 %}
                <div class="alert alert-danger" role="alert">
                    <h4>Erreurs du formulaire :</h4>
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {% if form.name.vars.errors|length > 0 %}
                                <div class="text-danger small mt-2">
                                    {{ form_errors(form.name) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                            {% if form.description.vars.errors|length > 0 %}
                                <div class="text-danger small mt-2">
                                    {{ form_errors(form.description) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.price) }}
                                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                                    {% if form.price.vars.errors|length > 0 %}
                                        <div class="text-danger small mt-2">
                                            {{ form_errors(form.price) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.brand) }}
                                    {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
                                    {% if form.brand.vars.errors|length > 0 %}
                                        <div class="text-danger small mt-2">
                                            {{ form_errors(form.brand) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.createdAt) }}
                            {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
                            {% if form.createdAt.vars.errors|length > 0 %}
                                <div class="text-danger small mt-2">
                                    {{ form_errors(form.createdAt) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                ✅ Créer le produit
                            </button>
                            <a href="{{ path('product_list') }}" class="btn btn-secondary">
                                ↶ Retour à la liste
                            </a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
